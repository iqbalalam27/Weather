<?xml version="1.0" encoding="utf-8"?>
<resources>
    //style for search edit text
    <style name="SearchTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:height">35dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawableLeft">@drawable/search_icon</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="cursorColor">@color/black</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:background">@drawable/search_background</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
    </style>

    //style for city name textView
    <style name="CityNameStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">22sp</item>
    </style>
</resources>